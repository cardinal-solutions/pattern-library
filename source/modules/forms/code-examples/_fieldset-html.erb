<fieldset name="basic-fieldset" id="basic-fieldset">
  <legend><h2>Customer Address</h2></legend>
  <div class="field">
    <label for="fieldset-street-address">Address</label>
    <input type="text" id="fieldset-street-address" name="fieldset-street-address" size="40" />
  </div>
  <div class="field-group">
    <div class="field">
      <label for="fieldset-street-city">City</label>
      <input type="text" id="fieldset-street-city" name="fieldset-street-city" size="40" />
    </div>
    <div class="field">
      <label for="fieldset-state">State</label>
      <select id="fieldset-state">
        <option>Alabama</option>
        <option>Arkansas</option>
        <option>Nebraska</option>
      </select>
    </div>
  </div>
  <div class="field">
    <label for="fieldset-zip">Zip Code</label>
    <input type="text" id="fieldset-zip" name="fieldset-zip" size="5" />
  </div>
</fieldset>
